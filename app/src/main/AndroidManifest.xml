<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.oscarapp">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.OscarApp"
        tools:targetApi="31">

        <!-- MainActivity - A tela inicial do app -->
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.OscarApp">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".LoginActivity"
            android:exported="true"
            android:label="@string/login_activity_label"
            android:theme="@style/Theme.OscarApp" />

        <activity
            android:name=".ConfirmarVotoActivity"
            android:exported="true"
            android:label="@string/confirmar_voto_activity_label"
            android:theme="@style/Theme.OscarApp" />

        <activity
            android:name=".DiretorActivity"
            android:exported="true"
            android:label="@string/diretor_activity_label"
            android:theme="@style/Theme.OscarApp" />

        <activity
            android:name=".FilmeActivity"
            android:exported="true"
            android:label="@string/filme_activity_label"
            android:theme="@style/Theme.OscarApp" />

        <activity
            android:name=".WelcomeActivity"
            android:exported="true"
            android:label="@string/welcome_activity_label"
            android:theme="@style/Theme.OscarApp" />

    </application>

</manifest>
